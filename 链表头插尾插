#include <iostream>
using namespace std;
struct Node
{
	int data;
	Node *next;
};
Node *createlist()
{
	Node *head = new Node;
	head->next = NULL;
	return head;
}
Node *createnode(int n)
{
	Node *newnode = new Node;
	newnode->data = n;
	newnode->next = NULL;
	return newnode;
}
//void inserthead(Node *head, int data)
//{
//	Node *newnode = createnode(data);
//	newnode->next = head->next;
//	head->next = newnode;
//}

void inserttail(Node *head, int data)//加的话不能用原来的那个方法，因为p指针重置为第一个了
{
	Node *newnode = createnode(data);
	Node *p = head;
	while (p->next != NULL)
	{
		p = p->next;
	}
	newnode->next = NULL;
	p->next = newnode;
}
void printlist(Node *head)
{
	Node *pmove = head->next;
	while (pmove)
	{
		cout << pmove->data << '\t';
		pmove = pmove->next;
	}
	cout << endl;
}
int main()
{
	Node *list = createlist();
	/*inserthead(list, 3);
	inserthead(list, 2);
	inserthead(list, 1);*/
	inserttail(list, 3);
	inserttail(list, 2);
	inserttail(list, 1);
	printlist(list);
	system("pause");
	return 0;
}
